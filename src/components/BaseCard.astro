---
interface Props {
  href?: string;
  external?: boolean;
}

const { href, external = false } = Astro.props;
---

{href ? (
  <a 
    href={href} 
    target={external ? "_blank" : "_self"}
    class="block rounded-lg border border-black/15 dark:border-white/20 bg-white/50 dark:bg-transparent hover:bg-white dark:hover:bg-white/5 hover:border-black/25 dark:hover:border-white/30 hover:text-black dark:hover:text-white hover:shadow-sm dark:hover:shadow-sm dark:hover:shadow-white/5 transition-all duration-500 ease-[cubic-bezier(0.4,0.0,0.2,1.0)]"
  >
    <slot />
  </a>
) : (
  <div class="rounded-lg border border-black/15 dark:border-white/20 bg-white/50 dark:bg-transparent hover:bg-white dark:hover:bg-white/5 hover:border-black/25 dark:hover:border-white/30 hover:shadow-sm dark:hover:shadow-sm dark:hover:shadow-white/5 transition-all duration-500 ease-[cubic-bezier(0.4,0.0,0.2,1.0)]">
    <slot />
  </div>
)}